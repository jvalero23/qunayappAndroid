<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".vistas.JourneyTipoOneThankYouActivity">

    <include layout="@layout/toolbar_main" />

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPersona"
                    android:src="@drawable/mascotapp_icon"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <TextView
                    android:gravity="center"
                    android:layout_marginEnd="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="8dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="¡Listo!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="center"
                    android:layout_marginEnd="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="8dp"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:text="Recibimos tu solicitud, en breve te llegará un correo con el detalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="\u2022 Veterinaria:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Nombre Veterinaria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="\u2022 Dirección:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Calle avenida 123"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="\u2022 Detalle:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Vacuna"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="\u2022 Detalle:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="1 a 5 kg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="\u2022 Paciente:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Giaia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="\u2022 Fecha:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="30 febrero"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="\u2022 Horario:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="13:00:00"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="\u2022 Correo:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_weight="50"
                        android:layout_marginEnd="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="prueba@prueba.com"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnVolver"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="12dp"
                    android:text="Volver al menú principal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:layout_gravity="bottom"
                    android:id="@+id/imgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner_gato" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>