<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                >


                <LinearLayout
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_weight="10"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <ImageView
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/patitas_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/patitas_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/patitas_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/patitas_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/patitas_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="22dp"
                        android:layout_marginEnd="22dp"
                        android:layout_weight="40"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:text="El servicio de alojamiento para perros fue bueno en general. A mi perro le encantÃ³ socializar con otros.."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginStart="22dp"
                        android:layout_marginEnd="22dp"
                        android:layout_weight="50"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="0dp">

                        <ImageView
                            android:layout_marginEnd="16dp"
                            android:id="@+id/imgHolder"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/comentario_user"
                            android:layout_width="56dp"
                            android:layout_height="56dp"/>

                        <LinearLayout
                            android:layout_marginTop="12dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Lizardo Martines"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/grisTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="hace 8 horas"
                                android:textSize="11sp"
                                android:textColor="@color/grisTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>