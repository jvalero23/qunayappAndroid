<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_border_custom_modal">

    <LinearLayout
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:id="@+id/lnContenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/felicidades"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:text="Â¡Felicidades!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="Ya eres parte de nuestra familia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:id="@+id/btnSiguiente_gracias"
            android:layout_gravity="center"
            android:text="Comencemos"
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>