<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="151.56dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:fitsSystemWindows="true"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="12dp">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvItem"
                        app:cardBackgroundColor="@color/verdepastelq"
                        android:layout_weight="75"
                        android:gravity="center"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp">

                        <ImageView
                            android:id="@+id/imgHolder"
                            android:padding="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/qunay_ilustraciones_app_boarding"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:fontFamily="@font/caprasimo_regular"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryColor"
                        android:layout_weight="25"
                        android:id="@+id/txtTitle"
                        android:gravity="center"
                        android:text="Boarding"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        />


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>